    <section class="pedidos">
        <div class="container">
            <h2>Entre em contato e fa√ßa seu pedido </h2>
            <form method="post">
                <div class="form-wraper w100">
                    <input placeholder="nome completo" required name="nome" type="text">
                </div>
                
                <div class="form-wraper w100">
                    <input placeholder="e-mail" required name="Email" type="email">
                </div>
            
                <div class="form-wraper w100">
                    <input placeholder="Telefone" required name="Telefone" type="text"oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" />
                </div>
                <div class="form-wraper w100">
                    <textarea name="pedido" placeholder="especifique seu pedido"></textarea>
                </div>
                <div class="form-wraper w100">
                    <h3>Forma de pagamento</h3>
                    <input placeholder="forma de pagamento" required name="pagamento" type="radio">
                    <label for="dinheiro">dinheiro</label>
                    <input placeholder="forma de pagamento" required name="pagamento" type="radio">
                    <label for="pix">pix</label>
                </div>
            <div class="container">
                <input class="btn1" type="submit"  /> 
            </div>
        </div><!--container-->
            
        <div class="clear"> </div>
